{
  "manifest_version": 2,

  "name": "Scroll Tab",
  "description": "Scrolling Chrome tab with mouse or keyboard.",
  "version": "4.2",
  "icons": {
    "16" : "icon.png",
    "48" : "icon.png",
    "128" : "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": ["runtime.js", "background.js"]
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["assets/lodash.min.js", "runtime.js"]
  }],
  "permissions": [
    "*://*/*",
    "activeTab",
    "tabs"
  ]
}
