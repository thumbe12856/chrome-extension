{
  "manifest_version": 3,

  "name": "Scroll Tab",
  "description": "Scrolling Chrome tab with mouse or keyboard.",
  "version": "3.0",
  "icons": {
    "16" : "icon.png",
    "48" : "icon.png",
    "128" : "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "*://*/*",
    "activeTab",
    "tabs"
  ]
}
